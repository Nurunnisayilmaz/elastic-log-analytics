{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "5s"
  },
  "mappings": {
    "dynamic": true,
    "properties": {
      "@timestamp": { "type": "date" },

      "level": { "type": "keyword" },
      "service_name": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text"
          }
        }
      },
      "endpoint": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text"
          }
        }
      },

      "message": {
        "type": "text",
        "analyzer": "standard"
      },

      "response_time": { "type": "integer" },
      "status_code": { "type": "integer" },
      "user_id": { "type": "keyword" },

      "severity_score": { "type": "integer" }
    }
  }
}
